[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto

[color "branch"]
        current = red reverse
        local = yellow
        remote = green

[core]
	excludesfile = .ht*
	editor = emacsclient -c -a=\\\"\\\"

[status]
    color = auto

[alias]
    lg = log --graph '--pretty=tformat:%Cblue%h%Creset %Cgreen%ar%Creset %Cblue%d%Creset %s'
    recent = branch --sort=-committerdate --format=\"%(committerdate:relative)%09%(refname:short)\"

